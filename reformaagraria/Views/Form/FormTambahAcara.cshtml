@{
    ViewData["Title"] = "Tambah Acara";
}

<!--start style section-->
<link type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--end style section-->

<!--start section-->
<section class="row">
    <!--Start tambah acara-->
    <div class="col-12 kartu">
        <div class="card w-100 h-100">
            <div class="card-body">
                <h4 class="card-title">Tambah Acara</h4>
                <h6 class="card-subtitle mb-2 text-muted">Card sub</h6>
                
                <form class="col-sm-12 col-md-10">
                    <div class="form-group row">
                        <label for="inlineFormCustomSelectPref" class="col-sm-4 col-md-2 col-form-label">Acara</label>
                        <div class="col-sm-8 col-md-10">
                            <select class="custom-select mb-2 mr-sm-2 mb-sm-0 col-sm-8" id="inlineFormCustomSelectPref">
                            <option selected>Pilih agenda acara...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-md-2 col-sm-4 col-form-label">Tgl & jam</label>
                        <div class="col-6 col-md-2 col-sm-4">
                            <input type="text" class="form-control" id="inputPassword3" placeholder="Tgl">
                        </div>
                        <div class="col-6 col-md-2 col-sm-4">
                            <input type="text" class="form-control" id="inputPassword3" placeholder="Jam">
                        </div>
                        
                        <div class="col-md-2 text-left col-sm-4">
                            <label for="tgldanJamSampai">Sampai</label>
                        </div>
                        
                        <div class="col-6 col-sm-4 col-md-2">
                            <input type="text" class="form-control" id="inputPassword3" placeholder="Tgl">
                        </div>
                        <div class="col-6 col-sm-4 col-md-2">
                            <input type="text" class="form-control" id="inputPassword3" placeholder="Jam">
                        </div>
                    </div>
                    <fieldset class="form-group">
                        <div class="row">
                            <legend class="col-form-legend col-sm-4 col-md-2">Pelaksanaan</legend>
                            <div class="col-sm-8">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                                        Kecamatan
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                                        Kelurahan
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                                        Desa
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group row">
                        <label for="form-check-label" class="col-md-2 col-sm-4 col-form-label">Lokasi</label>
                        <div class="col">
                            <input type="text" class="form-control" id="inputTempat" placeholder="Lokasi">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleFormControlTextarea1" class="col-md-2 col-sm-4 col-form-label">Keterangan</label>
                        <div class="col">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleFormControlTextarea1" class="col-md-2 col-sm-4 col-form-label"></label>
                        <div class="col-6 col-md-2 col-sm-4 col-xs-12">
                            <button type="submit" class="btn btn-primary btn-block">Simpan</button>
                        </div>
                        <div class="col-6 col-md-2 col-sm-4 col-xs-12">
                            <button type="submit" class="btn btn-danger btn-block" style="width: 100">Hapus</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end tambah acara-->
</section>
<!--end fo section-->

